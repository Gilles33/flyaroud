{% extends 'base.html.twig' %}

{% block body %}
    <h1>Reviews list</h1>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Text</th>
            <th>Author</th>
            <th>Publication Date</th>
            <th>Note</th>
            <th>User rated</th>
        </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.id }}</td>
                <td>{{ review.text }}</td>
                <td><a href="{{ path('user_show', { 'id': review.reviewAuthor}) }}">{{ review.reviewAuthor }}</a></td>
                <td>{{ review.publicationDate|date('d-m-Y') }}</td>
                <td>{{ review.note }}</td>
                <td>{{ review.userRated }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('review_show', { 'id': review.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>

        {% endfor %}
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('review_new') }}">Create a new review</a>
        </li>
    </ul>

{% endblock %}